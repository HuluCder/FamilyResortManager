@page
@model FamilyResortManager.Pages.Bookings.IndexModel

<div class="bg-white rounded-lg shadow-md animate__animated animate__fadeInUp">
  <div class="px-6 py-4 border-b border-gray-200 font-semibold text-xl">
    Список бронирований
  </div>
  <div class="p-6">
    <a asp-page="./AdminCreate"
       class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500 mb-4"
       data-tippy-content="Добавить новое бронирование">
      Добавить бронирование
    </a>

    <div class="overflow-x-auto">
      <table class="min-w-full text-left text-gray-700">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-2">Комната</th>
            <th class="px-4 py-2">Клиент</th>
            <th class="px-4 py-2">Заезд</th>
            <th class="px-4 py-2">Выезд</th>
            <th class="px-4 py-2">Статус</th>
            <th class="px-4 py-2">Действия</th>
          </tr>
        </thead>
        <tbody>
        @foreach(var b in Model.Bookings)
        {
          <tr class="border-b hover:bg-gray-50">
            <td class="px-4 py-2">@b.RoomId</td>
            <td class="px-4 py-2">@b.ClientId</td>
            <td class="px-4 py-2">@b.CheckInDate.ToString("yyyy-MM-dd")</td>
            <td class="px-4 py-2">@b.CheckOutDate.ToString("yyyy-MM-dd")</td>
            <td class="px-4 py-2">@b.Status</td>
            <td class="px-4 py-2 space-x-2">
              <a asp-page="./Details" asp-route-id="@b.Id"
                 class="text-blue-600 hover:underline" data-tippy-content="Подробно">
                Просмотр
              </a>
              <a asp-page="./Edit" asp-route-id="@b.Id"
                 class="text-gray-600 hover:underline" data-tippy-content="Редактировать">
                Изменить
              </a>
              <a asp-page="./Delete" asp-route-id="@b.Id"
                 class="text-red-600 hover:underline" data-tippy-content="Удалить">
                Удалить
              </a>
            </td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
</div>
