@page "{id:int}"
@model FamilyResortManager.Pages.Rooms.DeleteModel

<div class="card">
    <div class="card-header">
        Удалить номер
    </div>
    <div class="card-body">
        <h5 class="card-title">Вы уверены, что хотите удалить этот номер?</h5>

        <dl class="row mb-4">
            <dt class="col-sm-2">Номер</dt>
            <dd class="col-sm-10">@Model.Item.Number</dd>

            <dt class="col-sm-2">Тип</dt>
            <dd class="col-sm-10">@Model.Item.Type</dd>

            <dt class="col-sm-2">Цена</dt>
            <dd class="col-sm-10">@Model.Item.Price</dd>

            <dt class="col-sm-2">Статус</dt>
            <dd class="col-sm-10">@Model.Item.Status</dd>
        </dl>

        <form method="post" class="d-flex">
            <input type="hidden" asp-for="Item.Id" />
            <button type="submit" class="btn btn-danger me-2">Удалить</button>
            <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
        </form>
    </div>
</div>
